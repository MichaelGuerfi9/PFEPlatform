{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}



    {#
    <label for="username">{{ 'security.login.username'|trans }}</label>
    #}
    <label for="username">Adresse email</label>
    <br>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="col-lg-12"/>

    <br>

    {#
    <label for="password">{{ 'security.login.password'|trans }}</label>
    #}
    <label for="password">Mot de passe</label>
    <br>
    <input type="password" id="password" name="_password" required="required" class="col-lg-12" />

    <br>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">rester connect√©</label>

    <input class="col-lg-12" type="submit" id="_submit" name="_submit" value="Connexion" style=" background: #81C9CD; margin-top: 30%; border: 0: " >

</form>

