      <script>
          $('a[href^="#"]').click(function () {
              var the_id = $(this).attr("href");

              $('html, body').animate({
                  scrollTop: $(the_id).offset().top + 1
              }, 'slow');
              return false;
          });

          function rotateEach(el) {
              el.each(function (id) {
                  $(this).css({
                      'opacity': 1,
                      'transform': 'rotate(0deg)',
                      'transition' : 'all 2s cubic-bezier(0.19, 1, 0.22, 1)'+ (id)*.2+'s'
                  });
              })
          }
          function unrotate(el) {
              el.css({
                  'opacity':0,
                  'transform': 'translate(0, 50px) rotate(5deg)',
                  'transition' : '0s',
                  'transform-origin': 'center center'
              });
          }
          // apparition menuBurger
          unrotate( $('#menuBurger').find('li') );
          $('#menuBurger').css({'display': 'none', 'opacity': 0})
          $('#burger').bind('click', function (event) {
              event.stopPropagation();
              $(this).toggleClass('menuOpen');
              if($(this).hasClass('menuOpen')){
                  $('#menuBurger').css('display', 'block')
                  $('#menuBurger').animate({opacity: 1 }, 200)
                  rotateEach( $('#menuBurger').find('li') );
              } else {
                  $('#menuBurger').animate({opacity: 0 }, 200, function(){
                      $('#menuBurger').css('display', 'none')
                      unrotate( $('#menuBurger').find('li') );
                  })
              }
          });
          // INVIEW
          var selectInview = $('.pays, .acti, .actu, #aeroport, #welcom, #actu .txtArea > div, #choixFiltre, #partage, #partenaire');
          unrotate(selectInview.find('.toRotate'));
          selectInview.bind('inview', function (event, visible) {
              if (visible) {
                  rotateEach( $(this).find('.toRotate') );
              } else {
                  unrotate( $(this).find('.toRotate') );
              }
          });

      </script>


