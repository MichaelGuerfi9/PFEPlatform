    <script>

        $('.add-fav').on('click', function(event) {
            event.preventDefault();

        if ($(this).hasClass("add-fav")) {
            var url = "{{ path("deleteFav") }}";
            $(this).removeClass('add-fav');
        }else {
             var url = "{{ path("addFav") }}";
             $(this).addClass('add-fav');
         }

        /* Act on the event */

        var idSelector = "#"+$(this)[0].dataset.id;

        $.ajax({
        method: "POST",
        url: url,
        data: { id: $(this)[0].dataset.id }

        })
        .done(function( data ) {
            console.log(data);
            $(idSelector).remove();
