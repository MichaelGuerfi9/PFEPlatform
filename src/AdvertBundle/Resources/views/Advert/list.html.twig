{% extends 'base.html.twig' %}

{% block body %}


    <div class="container" style="margin-top: 10%; background-color: #e3e3e3;">
    {% for advert in adverts %}
        <div class="col-sm-2 col-md-4 col-lg-3 mt-4" style="background-color: white;border-radius: 5%;margin: 2% 0.3% 2% 0.3%;padding: 0;height: 390px;">
            <div class="card">
                <img class="card-img-top" src="{{ advert.imageUrl }}" style="width: 100%; height: auto;border-top-right-radius: 5%;border-top-left-radius: 5%;">
                <div class="card-block" style="padding: 20px;">
                    <h4 class="card-title">{{ advert.carModel|upper }}</h4>
                    <div class="meta">
                        {{ advert.description|slice(0, 50) ~ '...' }}
                    </div>
                </div>
                <div class="card-footer">
                    <span class="float-right">
                        <span>{{ advert.price|number_format(0,'.',' ') }} <img src="{{ asset("img/euro.png") }}" alt="euro"> </span> |
                        <span>{{ advert.mileage }} <img src="{{ asset("img/speedometer.png") }}" alt="speedometer"></span> |
                        <span>
                        {% if advert.gearbox == 'manual' %}
                            MANUELLE <img src="{{ asset("img/automatic.png") }}" alt="">
                            {% else %}
                            AUTOMATIQUE <img src="{{ asset("img/automatic.png") }}" alt="">
                        {% endif %}
                        </span>
                    </span>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
    <style>
        .card-title::before{
            font-family: Bebas sans-serif;
            width: 3px;
            height: 20px;
            background-color: #1a7bd3;
            content: '';
            display: inline-block;
            margin-left: -20px;
            margin-right: 15px;
        }

        @media (min-width: 1200px) {
            .col-lg-3 {
                width: 32%;
            }
        }

        .card-footer .float-right span {
            font-weight: bold;
            padding: 17px;
            margin-top:20px ;
        }
        .meta {
            font-size: 12px;
            color: #afafaf;
        }
    </style>
{% endblock %}
