{% extends 'base.html.twig' %}

{% block body %}
<div class="grid col-md-12" style="margin-top: 3%; /*background: #F5F5F5;*/ padding: 0;">


    <div class="col-lg-12" style="background-color: #F2F2F2; height: 1000px; margin-top: 3%">

        <div class="col-lg-7">

            <div class="col-lg-12" style="padding: 0">

                <img class="" src="{{ advert.imageUrl }}" style="width: 100%;">

            </div>

            <div class="col-lg-12" style="background: white; margin-top: 2%">

                <span class="blockMileage col-lg-3 ">
                    <p>Kilometers</p>
                    {{ advert.mileage }}
                </span>

                <span class="blockEnergy col-lg-3 ">
                    <p>Carburant</p>
                    {{ advert.energy }}
                </span>

                <span class="blockGearBox col-lg-3 ">
                    <p>Boite de vitesse</p>
                    {{ advert.gearBox }}
                </span>

                <span class="blockYear col-lg-3 ">
                    <p>Année</p>
                    {{ advert.yearOfProduction }}
                </span>

            </div>

        </div>


        <div class="col-lg-5">

            <div class="col-lg-12" style="background: white">

                <div class="col-lg-10" style="margin-left: 10%">

                    <p class="price text-center" style="font-size: 50px;">
                        {{ advert.price }} euros
                    </p>

                    <p class="text-center col-lg-12" style="font-size: 50px; padding: 0">
                        <button class="col-lg-12" style=" -webkit-border-radius: 8;
                        -moz-border-radius: 8;
                    border-radius: 8px;
                    font-family: Arial;
                    color: #3a6cc2;
                    font-size: 20px;
                    padding: 10px 20px 10px 20px;
                    border: solid #1f628d 2px;
                    text-decoration: none;">
                            Fiche technique du produit
                        </button>
                    </p>

                    <p class="" style="font-size: 50px;">
                        <p style="display: inline-block; font-weight: bold">Marque:</p> {{ advert.carModel }}
                    </p>

                    <p class="" style="font-size: 50px;">
                        <p style="display: inline-block; font-weight: bold">Type de véhicule:</p> Lorem ipsum
                    </p>

                    <p class="" style="font-size: 50px;">
                        <p style="display: inline-block; font-weight: bold">Couleur du véhicule:</p> Lorem ipsum
                    </p>

                    <p class="" style="font-size: 50px;">
                        <p style="display: inline-block; font-weight: bold">Modèle du véhicule:</p> Lorem ipsum
                    </p>

                    <p class="text-center col-lg-12" style="font-size: 50px; padding: 0">
                        <button class="col-lg-12" style=" -webkit-border-radius: 8;
                        -moz-border-radius: 8;
                    border-radius: 8px;
                    font-family: Arial;
                    color: white;
                    background: #194577;
                    font-size: 20px;
                    padding: 10px 20px 10px 20px;
                    border: solid #1f628d 2px;
                    text-decoration: none;">
                            Proceder au payement
                        </button>
                    </p>

                </div>



            </div>

        </div>


    </div>


<h1>Advert</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advert.id }}</td>
            </tr>
            <tr>
                <th>Carmodel</th>
                <td>{{ advert.carModel }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ advert.price }}</td>
            </tr>
            <tr>
                <th>Power</th>
                <td>{{ advert.power }}</td>
            </tr>
            <tr>
                <th>Mileage</th>
                <td>{{ advert.mileage }}</td>
            </tr>
            <tr>
                <th>Yearofproduction</th>
                <td>{{ advert.yearOfProduction }}</td>
            </tr>
            <tr>
                <th>Gearbox</th>
                <td>{{ advert.gearbox }}</td>
            </tr>
            <tr>
                <th>Energy</th>
                <td>{{ advert.energy }}</td>
            </tr>
            <tr>
                <th>Colorindoor</th>
                <td>{{ advert.colorIndoor }}</td>
            </tr>
            <tr>
                <th>Coloroutdoor</th>
                <td>{{ advert.colorOutdoor }}</td>
            </tr>
            <tr>
                <th>Nbrofdoors</th>
                <td>{{ advert.nbrOfDoors }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ advert.immatriculation }}</td>
            </tr>
            <tr>
                <th>Greycard</th>
                <td>{{ advert.greyCard }}</td>
            </tr>
            <tr>
                <th>Firsthand</th>
                <td>{% if advert.firstHand %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('index') }}">Back to the list</a>
        </li>
        {% if advert.reservedBy %}

            {% if app.user and advert.reservedBy.id == app.user.id %}

                <li>
                    <a href="{{ path('advert_rent', { 'id' : advert.id }) }}">Ne plus reserver</a>
                </li>

                {% if advert.expertise %}
                    L'expertise à déja été demandée.
                {% else %}
                    <li>
                        <a href="{{ path('ask_expertise', { 'id' : advert.id }) }}">Demander une expertise</a>
                    </li>
                {% endif %}

                <li>
                    <a href="{{ path('advert_rent', { 'id' : advert.id }) }}">Demander la livraison</a>
                </li>

            {% else %}
                Cette voiture est déja réservée.
            {% endif %}
        {% else %}
            <li>
                <a href="{{ path('advert_rent', { 'id' : advert.id }) }}">Réserver</a>
            </li>
        {% endif %}
        <li>
            <a href="{{ path('advert_edit', { 'id': advert.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>

{% endblock %}
